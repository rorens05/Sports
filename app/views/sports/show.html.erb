<p id="notice"><%= notice %></p>

<%= image_tag validate_image(@sport.logo),class: 'sports-image-show' %>

<p>
  <strong>Name:</strong>
  <%= @sport.name %>
</p>

<p>
  <strong>Game type:</strong>
  <%= @sport.game_type %>
</p>

<%= link_to 'Edit', edit_sport_path(@sport) %> |
<%= link_to 'Back', sports_path %> <hr>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sport</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= render partial: 'layouts/render_image', locals: {image: team.logo} %><%= link_to team.name, team %></td>
        <td><%= link_to team.sport.name, team.sport %></td>
        <td><%= link_to team.event.name, team.event %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
