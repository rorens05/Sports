<p id="notice"><%= notice %></p>

<h1>Sports</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Game type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sports.each do |sport| %>
      <tr>
        <td>
          <%= link_to sport do %>
            <%= render partial: 'layouts/render_image', locals: {image: sport.logo} %><%= sport.name %>
          <% end %>
        </td>
        <td><%= sport.game_type %></td>
      </tr>
    <% end %>
  </tbody>
</table>

