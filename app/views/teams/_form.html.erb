      <ul>
      <% team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :logo %>
    <%= form.file_field :logo %>
  </div>

  <div class="field">
    <%= form.label :sport_id %>
    <%= form.select :sport_id, options_from_collection_for_select(Sport.all, 'id', 'name', form.object.sport_id) %>
  </div>

  <div class="field">
    <%= form.label :event_id %>
    <%= form.select :event_id, options_from_collection_for_select(Event.all, 'id', 'name', form.object.event_id) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
