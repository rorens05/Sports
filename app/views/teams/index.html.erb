<p id="notice"><%= notice %></p>

<h1>Teams</h1><hr>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sport</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= render partial: 'layouts/render_image', locals: {image: team.logo} %><%= link_to team.name, team %></td>
        <td><%= link_to team.sport.name, team.sport %></td>
        <td><%= link_to team.event.name, team.event %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
