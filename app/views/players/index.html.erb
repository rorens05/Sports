<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact no</th>
      <th>Address</th>
      <th>School</th>
      <th>Year</th>
      <th>Course</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.contact_no %></td>
        <td><%= player.address %></td>
        <td><%= player.school %></td>
        <td><%= player.year %></td>
        <td><%= player.course %></td>
        
        <% if player.team %>
          <td><%= link_to player.team.name, player.team %></td>
        <% else %>
          <td>No Team</td>
        <% end %>
        
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

